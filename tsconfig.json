{
  "extends": "@tsconfig/node14",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["./"],
  "exclude": ["./*.test.ts"]
}
